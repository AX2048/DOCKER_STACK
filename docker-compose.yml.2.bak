services:
  web:
    image: uvicorn_app
    ports:
     - ":80"

  ngx:
    image: nginx
    depends_on:
     - web
    links:
     - web
    ports:
     - "80:80"
    volumes:
     - ./nginx/conf.d/:/etc/nginx/conf.d/:ro
     - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    #command: [nginx, '-T']
    #command: [cat, /etc/nginx/nginx.conf]
    

